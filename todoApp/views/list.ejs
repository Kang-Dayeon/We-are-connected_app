<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="./../myicon.ico">

  <title>List</title>

  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="./../public/main.css">


</head>

<body>

  <%- include('nav.ejs') %>


    <!-- ejs 문법: <% %>여기 안은 자바스크립트 문법을 실행하는 곳임 -->
    <div class="container-md mt-2">
      <h2 class="fs-4 fw-bold text-center">Idea List <i class="bi bi-tsunami"></i></h2>
      <div class="input-group mb-2">
        <input class="form-control" id="searchInput">
        <button class="input-group-append btn btn-outline-dark" id="search">검색</button>
      </div>
      <ul class="list-group list-group-flush">
        <% for (var i=0; i < posts.length; i++){ %>
          <li class="list-group-item fs-6 title bg-transparent">
            <a class="detail-anchor d-flex justify-content-between align-items-center"
              href="https://dotted-furnace-360604.du.r.appspot.com/detail/<%= posts[i]._id %>">
              <div>
                <span>
                  <%= posts[i]._id %>
                    &nbsp;&nbsp;<%= posts[i].title %>
                </span>
              </div>
              <span>
                <%= posts[i].date %>
              </span>
            </a>
          </li>
          <% } %>
      </ul>
    </div>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
      $(document).ready(function () {

        $('#search').click(function () {
          var inputVal = $("#searchInput").val();
          window.location.replace('/search?value=' + inputVal)
        });

        $('.comment').click(function (e) {
          var id = e.target.dataset.id;
          var title = e.target.dataset.title;
          $.post('/commentroom', { title: title, postId: id }).then(() => {
            console.log('성공');
          });
        })

        // query string이란
        // get요청시 서버로 데이터를 전해주는 것이다 .? 뒤에 정보를 입력하면 된다
        // 형식 : 데이터이름1=데이터값1&데이터이름2=데이터값2

        // query string 만들때
        // var 자료 = { 이름: '값', 이름2 : '값2'}
        // $.param(자료)
        // 이런식으로 만들면 query string으로 변환 할 수 있다
        // $(폼태그).serielize()
        // 이런식으로 폼태그도 활용 가능한데 input태그 안에 name속성이 있어야함


      });

    // ajax 기본 문법
    // $.ajax({
    //   method : 'DELETE',
    //   url : '요청할 경로',
    //   data : '요청과 함께 보낼 데이터'
    // })
    // .fail : 요청 실패했을경우 사용
    </script>


    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"></script>

</body>

</html>